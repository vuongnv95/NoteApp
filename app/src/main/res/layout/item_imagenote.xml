<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_image"
        android:layout_width="@dimen/with_item_imagenote"
        android:scaleType="centerCrop"
        android:layout_height="@dimen/height_item_imagenote"
        android:src="@drawable/ic_camera" />
    <ImageView
        android:id="@+id/iv_item_remove"
        android:layout_gravity="end|top"
        android:layout_marginTop="@dimen/margin_item_remove"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_item_remove"/>

</FrameLayout>