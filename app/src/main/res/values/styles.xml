<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="spinnerStyle">@style/SpinnerStyle</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
        <item name="panelBackground">@color/colorAccent</item>
    </style>
    <style name="FragmentTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="panelBackground">@color/colorAccent</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:divider">#000000</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textSize">@dimen/text_spinner</item>
    </style>

</resources>
